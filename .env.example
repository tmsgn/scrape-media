# Copy this file to .env and set your values

# Comma-separated list of API keys; validated as Bearer tokens in Authorization header
API_KEYS=key1,key2

# CORS allowed origins (comma-separated). Use * to allow all (not recommended in production)
CORS_ORIGINS=https://your-frontend.example.com

# Optional: rate limiting per API key
RATE_LIMIT_PER_MIN=60
RATE_LIMIT_BURST=100

# Database URL for usage tracking (Vercel Postgres recommended)
# Example: postgres://user:pass@host:5432/db?sslmode=require
DATABASE_URL=

# Optional port override for local dev
# PORT=8080
